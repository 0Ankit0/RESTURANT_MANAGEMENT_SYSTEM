@model RMS_FRONTEND.Models.Orders.OrderWithDetails

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>Details</h1>

<div>
    <h4>OrderDetails</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TableNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TableNumber)
        </dd>
        @for(var i=0; i < Model.OrderDetails.Count; i++)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(item => item.OrderDetails[i].MenuId)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(item => item.OrderDetails[i].MenuId)
            </dd>

            <dt class = "col-sm-2">
                @Html.DisplayNameFor(item => item.OrderDetails[i].Quantity)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(item => item.OrderDetails[i].Quantity)
            </dd>
            
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(item => item.OrderDetails[i].Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(item => item.OrderDetails[i].Price)
            </dd>

        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
