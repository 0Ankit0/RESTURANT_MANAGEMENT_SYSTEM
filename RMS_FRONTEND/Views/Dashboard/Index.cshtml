	<h3>Cleave.js(Format Input)</h3>
	<div class="row">

		<div class="form-group col-md-4">
			<label>Phone</label>
			<input class="form-control cleavePhone" type="text" />
		</div>
		<div class="form-group col-md-4">
			<label>Date</label>
			<input class="form-control cleaveDate" type="text" placeholder="DD-MM-YYYY" />
		</div>
		<div class="form-group col-md-4">
			<label>Money</label>
			<input class="form-control cleaveMoney" type="text" />
		</div>
	</div>

	<h3>Generating Barcode</h3>
	<div class="row">
		<div class="form-group col-md-4">
			<label>Barcode Text</label>
			<input class="form-control barcodeText" type="text" />
		</div>
		<div class="form-group col-md-4 barCodeDiv">
			<canvas id="barcodeImage"></canvas>
		</div>

	</div>
