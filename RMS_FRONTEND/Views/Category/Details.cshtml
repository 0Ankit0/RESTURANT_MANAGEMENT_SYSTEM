@model RMS_FRONTEND.Models.Menu.CategoryModel

@{
    ViewData["Title"] = "MenuList";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<h1>Details</h1>

<div>
    <h4>CategoryMaster</h4>
    <hr />
    <dl class="row">
           @*  <dt class="col-sm-2">
                @Html.DisplayNameFor(model => Model.CategoryName)
            </dt> *@
            <dd class="col-sm-10 fs-2">
                @Html.DisplayFor(model => Model.CategoryName)
            </dd>

            @foreach (var item in Model.Menu)
            {
                <dd class="col-sm-6">
                <div asp-for="item.MenuName" class="fs-4">
                    @item.MenuName
                </div>
                    @Html.DisplayFor(model => item.Description)
                </dd>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => item.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.IsAvailable)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.IsAvailable)
                </dd>


            }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
